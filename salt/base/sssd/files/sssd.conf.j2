
[sssd]
domains = {{ pillar['sssd']['domain'] }}
services = nss, pam
config_file_version = 2

[nss]
filter_groups = root
filter_users = root

[pam]
offline_credentials_expiration = 1

[domain/{{ pillar['sssd']['domain'] }}]
id_provider = ldap
auth_provider = krb5
krb5_server = {{ pillar['sssd']['krb5_server'] }}
krb5_realm = {{ pillar['sssd']['realm'] }}
ldap_uri = {{ pillar['sssd']['ldap_uri'] }}
ldap_search_base = {{ pillar['sssd']['ldap_search_base'] }}
cache_credentials = true
enumerate = false
